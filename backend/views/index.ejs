<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/main.css">
    <title>Speech translator</title>
  </head>
  <body>

    <div id="sidebar" class="d-flex flex-column border-end fw-lighter px-2">
      <div class="pt-2 pb-2 border-bottom text-center fs-4">Settings</div>
      <div class="form-check form-switch mt-3 d-flex justify-content-evenly">
        <input class="form-check-input" type="checkbox" id="dark-mode-switch">
        <label class="form-check-label" for="dark-mode-switch">Dark Mode</label>
      </div>
      <div class="mt-2">
          <label for="language-from">Language from:</label>
          <select class="form-select mt-1 fw-lighter" name="" id="language-from">
            <% 
              for (let language in languages) {
                if (typeof languages[language] == "string") { 
            %>
              <option value="<%= language %>"><%= languages[language] %></option>
            <%
                } 
              } 
            %>
          </select>
      </div>
      <div class="mt-3">
        <label for="language-to">Language to:</label>
        <select class="form-select mt-1 fw-lighter" name="" id="language-to">
          <% 
            for (let language in languages) { 
              if (typeof languages[language] == "string" && language != "auto") { 
          %>
              <option value="<%= language %>"><%= languages[language] %></option>
          <%
              }
            } 
          %>
        </select>
      </div>
      <div id="toggler-wrapper">
        <div id="sidebar-toggler">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-chevron-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
          </svg>
        </div>
      </div>
    </div>

    <div id="main-content">
      <div id="blur"></div>
      <div id="transcript-container" class="container my-3 text-center fs-4 fw-lighter">
        <span class="fs-4 fw-lighter text-muted">Press spacebar to start!</span>
      </div>
    </div>

    <div id="mic-off" class="mic">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-mic-mute" viewBox="0 0 16 16">
        <path d="M13 8c0 .564-.094 1.107-.266 1.613l-.814-.814A4.02 4.02 0 0 0 12 8V7a.5.5 0 0 1 1 0v1zm-5 4c.818 0 1.578-.245 2.212-.667l.718.719a4.973 4.973 0 0 1-2.43.923V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 1 0v1a4 4 0 0 0 4 4zm3-9v4.879l-1-1V3a2 2 0 0 0-3.997-.118l-.845-.845A3.001 3.001 0 0 1 11 3z"/>
        <path d="m9.486 10.607-.748-.748A2 2 0 0 1 6 8v-.878l-1-1V8a3 3 0 0 0 4.486 2.607zm-7.84-9.253 12 12 .708-.708-12-12-.708.708z"/>
      </svg>
    </div>
    <div id="mic-on" class="mic hide"> 
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-mic-fill" viewBox="0 0 16 16">
        <path d="M5 3a3 3 0 0 1 6 0v5a3 3 0 0 1-6 0V3z"/>
        <path d="M3.5 6.5A.5.5 0 0 1 4 7v1a4 4 0 0 0 8 0V7a.5.5 0 0 1 1 0v1a5 5 0 0 1-4.5 4.975V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 .5-.5z"/>
      </svg>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/js/sidebar.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>